<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#ffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/font_style_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1e1e1e"
        android:gravity="center"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/font_style_description"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:paddingBottom="20dp"/>

    <!-- Font Preview -->
    <TextView
        android:id="@+id/fontPreviewText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/font_preview_text"
        android:textSize="32sp"
        android:textColor="#1e1e1e"
        android:gravity="center"
        android:padding="20dp"
        android:background="#f5f5f5"
        android:layout_marginBottom="20dp"/>

    <!-- Font Style Spinner -->
    <Spinner
        android:id="@+id/fontStyleSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="20dp"/>

    <!-- Apply Button -->
    <Button
        android:id="@+id/applyFontButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/font_apply_button"
        android:textColor="#ffffff"
        android:padding="15dp"
        android:textSize="16sp"/>

</LinearLayout>
